# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C/C++ source files
[*.{c,h,cpp,hpp,cc,cxx}]
indent_size = 4
max_line_length = 100

# Reasons DSL files
[*.reasons]
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true

# Makefiles require tabs
[Makefile*]
indent_style = tab
indent_size = 8

[*.mk]
indent_style = tab
indent_size = 8

# CMake files
[CMakeLists.txt]
indent_size = 2

[*.cmake]
indent_size = 2

# Meson build files
[meson.build]
indent_size = 2

[*.build]
indent_size = 2

# Autotools
[*.{ac,am,in}]
indent_size = 2

# Configuration files
[*.{json,yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.{conf,config,cfg,ini}]
indent_size = 4

# Documentation
[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.{rst,adoc}]
indent_size = 3

[*.tex]
indent_size = 2

# Web files (for documentation)
[*.{html,css,js}]
indent_size = 2

[*.svg]
indent_size = 2
insert_final_newline = false

# Shell scripts
[*.{sh,bash,zsh,fish}]
indent_size = 4

# Windows scripts
[*.{bat,cmd}]
end_of_line = crlf
indent_size = 4

[*.ps1]
end_of_line = crlf
indent_size = 4

# Package configuration
[*.pc.in]
indent_size = 4

[*.spec]
indent_size = 4

[PKGBUILD]
indent_size = 2

# Man pages
[*.{1,2,3,4,5,6,7,8}]
indent_size = 4
max_line_length = 72

# Data files
[*.{csv,tsv}]
trim_trailing_whitespace = false

[*.{xml,sql}]
indent_size = 2

# Git files
[.git*]
indent_size = 4

# CI/CD files
[.github/**/*.yml]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[Dockerfile*]
indent_size = 4

# License files
[LICENSE*]
indent_size = 4
max_line_length = 80

[COPYING*]
indent_size = 4
max_line_length = 80

# Changelog
[CHANGELOG*]
indent_size = 2

# README and other markdown docs
[README*]
indent_size = 2

# Test files
[tests/**/*.c]
indent_size = 4
max_line_length = 120

# Example files
[examples/**/*.reasons]
indent_size = 2
max_line_length = 80

# Vendor/third-party code (if any)
[vendor/**]
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

# Generated files (don't enforce formatting)
[build/**]
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

[dist/**]
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
